<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.BeerRepository">
    <select id="selectAll" resultType="com.example.demo.model.Beer">
        SELECT
            beer_id as id,
            name
        FROM
            beers
        ORDER BY
            beer_id
    </select>
</mapper>
